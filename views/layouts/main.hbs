<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Bookstore Back Office</title>
		<link rel="preload" href="/typeface.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="stylesheet" href="/main.css">
	</head>
	<body>
		<nav>
			<div id="navSpace"></div>
			{{#each pages}}
				<a class="page {{#isEqual title ../curr}}curr{{/isEqual}}" href="{{url}}">{{title}}</a>
			{{/each}}
		</nav>
		<div id="util">
			<h1>{{curr}}</h1>
			<p>Bookstore Back Office</p>
			{{#isNotEqual curr "Home"}}
			<button id="create">Create New {{curr}}</button>
			<button id="edit">Edit {{curr}}</button>
			<button id="delete">Delete {{curr}}</button>
			{{/isNotEqual}}
		</div>
		{{{body}}}
	</body>
</html>
